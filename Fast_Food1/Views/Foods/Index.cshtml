@model Fast_Food1.Models.FoodCategoryView

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Create New</a>
    <a asp-controller="Home" asp-action="Index" class="btn btn-secondary">Back to Home</a>
</p>

<form asp-controller="Foods" asp-action="Index" method="get" class="mb-3">
    <div class="row">
        <div class="col-md-4">
            <select asp-for="FoodCategory" asp-items="Model.Category" class="form-control">
                <option value="">All</option>
            </select>
        </div>
        <div class="col-md-4">
            <input type="text" asp-for="SearchString" class="form-control" placeholder="Search by Title">
        </div>
        <div class="col-md-4">
            <button type="submit" class="btn btn-primary">Filter</button>
        </div>
    </div>
</form>

<table class="table">
    <thead>
        <tr>
            <th>Title</th>
            <th>Price</th>
            <th>Category</th>
            <th>Rating</th>
            <th>Image</th>
            <th>Amount</th>
            <th>Sold</th>
            <th>Discount Today</th>
            <th>Final Price</th>
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model.Foods)
        {
            <tr>
                <td>@Html.DisplayFor(modelItem => item.Title)</td>
                <td>@Html.DisplayFor(modelItem => item.Price)</td>
                <td>@Html.DisplayFor(modelItem => item.Category)</td>
                <td>@Html.DisplayFor(modelItem => item.Rating)</td>
                <td><img src="@item.Image" alt="Image" style="max-width: 100px; max-height: 100px;" /></td>
                <td>@Html.DisplayFor(modelItem => item.Amount)</td>
                <td>@Html.DisplayFor(modelItem => item.Sold)</td>
                <td>@Html.DisplayFor(modelItem => item.DiscountToday)</td>
                <td>@Html.DisplayFor(modelItem => item.FinalPrice)</td>
                <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-sm btn-primary">Edit</a>
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-sm btn-info">Details</a>
                    <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-sm btn-danger">Delete</a>
                </td>
            </tr>
        }
    </tbody>
</table>
