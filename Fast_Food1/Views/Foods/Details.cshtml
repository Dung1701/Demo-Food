@model Fast_Food1.Models.Food
@using Fast_Food1.Data;
@{
    ViewData["Title"] = "Details";
}

<style>
    .details-container {
        display: flex;
        align-items: flex-start;
    }

        .details-container img {
            margin-right: 20px;
        }

    .comment-section {
        margin-top: 20px;
    }

        .comment-section .p-3 {
            border: 1px solid #ccc;
            padding: 10px;
            margin-bottom: 10px;
        }

        .comment-section pre {
            margin-bottom: 5px;
        }

    /* Di chuyển nút "Add to Cart" vào góc phải */
    .add-to-cart-button {
        text-align: right;
    }

    .suggested-foods-container .card-body {
        position: relative;
    }

    .suggested-foods-container .add-to-cart-button {
        position: absolute;
        bottom: 10px;
        right: 10px;
    }
</style>

<h1>Details</h1>

<div class="details-container">
    <img class="rounded-3" height="270" width="280" alt="@Model.Image" src="@Model.Image">

    <div>
        <h4>Food</h4>
        <hr />
        <dl class="row">
            <dt class="col-sm-2">
                @Html.DisplayNameFor(Model => Model.Title)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Title)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Price)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Price)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Category)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Category)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Rating)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Rating)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Amount)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Amount)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.Sold)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.Sold)
            </dd>
            <dt class="col-sm-2">
                @Html.DisplayNameFor(model => model.DiscountToday)
            </dt>
            <dd class="col-sm-10">
                @Html.DisplayFor(model => model.DiscountToday)
            </dd>
        </dl>
    </div>
</div>

<div class="add-to-cart-button">
    <form asp-controller="CartItems" asp-action="Buy" method="post">
        <input type="hidden" name="id" value="@Model.Id" />
        <button type="submit" class="btn btn-primary">Add to Cart</button>
    </form>
</div>

<div class="comment-section">
    @if (Model.Comments != null && Model.Comments.Any())
    {
        foreach (var comment in Model.Comments)
        {
            <div class="p-3">
                <div>
                    <pre style="color:rebeccapurple">➤ @comment.User.UserName @comment.CreatedDate.ToString("MM/dd/yyyy hh:mm tt")</pre>
                    <p>@comment.Content</p>
                    <p>Rating: @comment.Rating</p>
                </div>
            </div>
        }
    }
    else
    {
        <p>No comments available.</p>
    }
</div>

@if (ViewData["SuggestedFoods"] != null)
{
    <div class="suggested-foods-container">
        <h4>Suggested Foods</h4>
        <div class="row">
            @foreach (var suggestedFood in (List<Fast_Food1.Models.Food>)ViewData["SuggestedFoods"])
            {
                <div class="col-md-3 mb-3">
                    <div class="card">
                        <a asp-action="Details" asp-controller="Foods" asp-route-id="@suggestedFood.Id">
                            <img src="@suggestedFood.Image" class="card-img-top" alt="@suggestedFood.Title">
                        </a>
                        <div class="card-body">
                            <h5 class="card-title">
                                <a asp-action="Details" asp-controller="Foods" asp-route-id="@suggestedFood.Id">
                                    @suggestedFood.Title
                                </a>
                            </h5>
                            <p class="card-text">Price: @suggestedFood.Price</p>
                            <p class="card-text">Category: @suggestedFood.Category</p>
                            <p class="card-text">Rating: @suggestedFood.Rating</p>
                            <form asp-controller="CartItems" asp-action="Buy" method="post" class="add-to-cart-button">
                                <input type="hidden" name="id" value="@suggestedFood.Id" />
                                <button type="submit" class="btn btn-primary">Add to Cart</button>
                            </form>
                            <form asp-controller="Foods" asp-action="Details" method="post" style="display: inline-block; margin-left: 10px;">
                                <input type="hidden" name="id" value="@suggestedFood.Id" />
                                <button type="submit" class="btn btn-primary">Details</button>
                            </form>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
}

@if (User.IsInRole("Admin"))
{
    <div>
        <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a>
    </div>
}

<div><a asp-controller="Home" asp-action="Index">Back to Home</a></div>
